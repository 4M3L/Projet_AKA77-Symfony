{% extends 'base.html.twig' %}

{% block title %}Gallery{% endblock %}

{% block body %}
    <h1>Gallery</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ gallery.id }}</td>
            </tr>
            <tr>
                <th>ImgName</th>
                <td>{{ gallery.imgName }}</td>
            </tr>
            <tr>
                <th>UrlImgOriginal</th>
                <td>{{ gallery.urlImgOriginal }}</td>
            </tr>
            <tr>
                <th>ImgLike</th>
                <td>{{ gallery.imgLike }}</td>
            </tr>
            <tr>
                <th>DateUpdate</th>
                <td>{{ gallery.dateUpdate ? gallery.dateUpdate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('gallery_index') }}">back to list</a>

    <a href="{{ path('gallery_edit', {'id': gallery.id}) }}">edit</a>

    {{ include('gallery/_delete_form.html.twig') }}
