{% extends 'base.html.twig' %}

{% block title %}Gallery index{% endblock %}

{% block body %}

    <h1 style ="margin-bottom:50px;">Page d'administration de la galerie</h1>
    <a class="btn btn-success" href="{{ path('gallery_new') }}" style="margin-bottom:50px;">Ajouter une nouvelle Image</a>
<section style="display:flex; justify-content:sflex-start; flex-wrap:wrap; margin-bottom:50px; ">

        {% for gallery in galleries %}

            <figure style="text-align:center;  padding:20px;">
  <a href="{{ path('gallery_edit', {'id': gallery.id}) }}"><img src="{{ asset( gallery.urlImgOriginal) }}" alt="{{ gallery.imgName }}" style="width:250px; height:200px; object-fit:cover; border-radius:20px; box-shadow:0 0 20px gray;"></a>
  <figcaption><strong>{{ gallery.imgName }}</strong></figcaption>
     {# <a href="{{ path('gallery_show', {'id': gallery.id}) }}" class="btn btn-primary">Ouvrir</a> #}
                    {# <a href="{{ path('gallery_edit', {'id': gallery.id}) }}" class="btn btn-primary">Modifier / Supprimer</a> #}
</figure>
        {% endfor %}

</section>

{% endblock %}
