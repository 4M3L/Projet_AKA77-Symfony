{% extends 'base.html.twig' %}

{% block title %}Gallery index{% endblock %}

{% block body %}
    <h1>Page d'administration de la galerie</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>ImgName</th>
                <th>UrlImgOriginal</th>
                <th>ImgLike</th>
                <th>DateUpdate</th>
                <th>actions</th>
                
            </tr>
        </thead>
        <tbody>
        {% for gallery in galleries %}
            <tr>
                <td>{{ gallery.id }}</td>
                <td>{{ gallery.imgName }}</td>
                <td><img src="{{ gallery.urlImgOriginal }}" alt="{{ gallery.imgName }}"></td>
                <td>{{ gallery.imgLike }}</td>
                <td>{{ gallery.dateUpdate ? gallery.dateUpdate|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('gallery_show', {'id': gallery.id}) }}">show</a>
                    <a href="{{ path('gallery_edit', {'id': gallery.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('gallery_new') }}">Create new</a>
{% endblock %}
